@model CMS.ViewModels.SubjectRelatedData

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Subject</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.subj.SubjectId)

        <div class="form-group">
            @Html.LabelFor(model => model.subj.SubjectName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.subj.SubjectName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.subj.SubjectName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.subj.SubjectPosition, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.subj.SubjectPosition, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.subj.SubjectPosition, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.subj.SubjectVisible, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.subj.SubjectVisible)
                    @Html.ValidationMessageFor(model => model.subj.SubjectVisible, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        
        <h5>Pages</h5>
        <div class="form-group">
            @foreach (var temp in Model.pg)
            {
                <div class="form-group">
                    @temp.PageName
                    <a href="/Page/Edit?id=@temp.PageId">Edit</a> |
                    <a href="/Page/Details?id=@temp.PageId">Details</a> |
                    <a href="/Page/Delete?id=@temp.PageId">Delete</a>
                </div>

            }
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
